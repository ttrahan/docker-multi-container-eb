
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "node-app",
      "image": "$IMAGE_REPO_NODE:$IMAGE_TAG_NODE",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": ${PORT_NODE},
          "containerPort": 8000
        }
      ],
      "mountPoints": []
    },
    {
      "name": "tomcat-app",
      "image": "$IMAGE_REPO_TOMCAT:$IMAGE_TAG_TOMCAT",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": ${PORT_TOMCAT},
          "containerPort": 8080
        }
      ],
      "mountPoints": []
    }
  ]
}
