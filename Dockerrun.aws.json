
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "node-app",
      "image": "$DOCKER_ACCOUNT/$DOCKER_REPO_NODE_APP:$IMAGE_TAG",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8000
        }
      ],
      "command": [
        "/bin/bash",
        "/usr/src/app/run.sh"
      ],
      "mountPoints": [
        {
          "sourceVolume": "node-app",
          "containerPath": "/usr/src/app"
        }
      ]
    },
    {
      "name": "tomcat-app",
      "image": "$DOCKER_ACCOUNT/$DOCKER_REPO_TOMCAT_APP:$IMAGE_TAG",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ],
    }
  ]
}
